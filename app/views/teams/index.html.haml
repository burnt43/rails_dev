%table.table.table-hover
  %thead
    %tr
      %th Actions
      - Team.column_names.reject { |name| name == 'id' }.each do |column_name|
        %th= column_name
  %tbody
    - Team.all.each do |team|
      %tr
        %td
          %a{href: edit_team_path(team)}
            %i.fa.fa-pencil-square-o.fa-2x
        - Team.column_names.reject { |name| name == 'id' }.each do |column_name|
          %td= team.send(column_name)

